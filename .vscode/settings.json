{
    /* Start ==== c/cpp */
    "C_Cpp.autocomplete": "default",
    "C_Cpp.formatting": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    /* End ==== c/cpp */
    /* Start ==== clangd */
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/", // compile-commands.json 文件所在路径
        "--background-index", // 在后台自动分析文件 (基于complie_commands)
        "-j=12", // 同时开启的任务数量
        "--completion-style=detailed",
        "--suggest-missing-includes",
        "--all-scopes-completion=true"
    ],
    // 启用/禁用服务器端的补全排序功能：此选项用于控制 clangd 是否使用服务器端的逻辑来对代码补全建议进行排序。如果启用，clangd 将利用其内置算法根据上下文和代码语义对补全项进行排序，以提供更相关的补全建议
    "clangd.serverCompletionRanking": true,
    /* End ==== clangd */
    "files.associations": {
        ".clang-format": "yaml",
        "*.toml": "toml",
        "*.ahk": "ahk2",
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        ".clang": "yaml",
        "Kconfig": "kconfig",
        ".ccls": "yaml",
        "*.build": "makefile",
        "*.bak": "Log",
        "*.cmake": "cmake",
        "*.ld": "linkerscript",
        "*.hex": "code-text-binary",
        "*.h": "c",
        ".inputrc": "ini",
        "*.fish": "fish",
        "*.nu": "nushell",
        "*.kbd": "lisp",
        "*.ini": "ini",
        "*.code-snippets": "json",
        "*.rh": "cpp",
        "iostream": "cpp"
    },
}
